generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id        String    @id @default(uuid())
  userId    String    @unique
  password  String
  favorites Favorite[]
}

model Favorite {
  id        String   @id @default(uuid())
  accountId String
  scholarId String

  account   Account  @relation(fields: [accountId], references: [id])

  @@unique([accountId, scholarId])
}
